# =================================================================
# Database Configuration (PostgreSQL)
# =================================================================
DATABASE_URL=postgresql+asyncpg://user:password@db:5432/fastcarsales

# =================================================================
# Redis Configuration
# =================================================================
REDIS_URL=redis://redis:6379/0

# =================================================================
# Application Configuration
# =================================================================
ENVIRONMENT=development

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-min-32-chars-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# CORS Configuration
CORS_ORIGINS=http://localhost:8000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM_NAME=carsales-support

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760

# Profile Image Upload Configuration
MAX_PROFILE_IMAGE_BYTES=5242880
ALLOWED_IMAGE_MIMES=image/jpeg,image/png
PROFILE_UPLOAD_BUCKET=/app/uploads/profiles

# MinIO Object Storage Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
CDN_BASE_URL=http://localhost:9000

# ClamAV Malware Scanning Configuration
CLAMD_HOST=clamd
CLAMD_PORT=3310

# Varnish Cache Configuration
VARNISH_URL=http://localhost:6081

# Logging
LOG_LEVEL=INFO
